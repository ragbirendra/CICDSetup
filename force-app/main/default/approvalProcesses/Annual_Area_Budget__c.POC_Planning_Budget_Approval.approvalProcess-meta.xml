            <action>
                <name>Budget_Plan_Approval_Notification</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Set_Never_Approved_to_False</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Approval_Status_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>All budget plans must be approved by the DSM</description>
        <label>Approval to DSM</label>
        <name>Approval_to_DSM</name>
        <rejectionActions>
            <action>
                <name>Budget_Plan_Rejection_Notification</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Approval_Status_to_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Approval process of the POC Planning Budget from the Field Sales rep to the District Sales Manager (DSM)</description>
    <emailTemplate>unfiled$public/POC_Planning_Approval_Notification</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 AND 2) AND (3 OR 4)</booleanFilter>
        <criteriaItems>
            <field>Annual_Area_Budget__c.Approval_Status__c</field>
            <operation>equals</operation>
            <value>Required,Rejected,Incomplete</value>
        </criteriaItems>
        <criteriaItems>
            <field>Annual_Area_Budget__c.Status__c</field>
            <operation>equals</operation>
            <value>In Progress</value>
        </criteriaItems>
        <criteriaItems>
            <field>Annual_Area_Budget__c.RecordType</field>
            <operation>equals</operation>
            <value>OOH Territory</value>
        </criteriaItems>
        <criteriaItems>
            <field>Annual_Area_Budget__c.RecordType</field>
            <operation>equals</operation>
            <value>New IH Territory</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
